<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Daftar Buku</h1>
    <a href="/book/add" class="btn btn-primary">Tambah Buku Baru</a>
</div>

<% if (books.length === 0) { %>
    <div class="alert alert-info" role="alert">
        Belum ada buku yang ditambahkan.
    </div>
<% } else { %>
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nama Buku</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-center">Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach((book, index) => { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= book.Name %></td>
                    <td>
                        <% if (book.completed) { %>
                            <span class="badge bg-success">Selesai Dibaca</span>
                        <% } else { %>
                            <span class="badge bg-warning text-dark">Belum Dibaca</span>
                        <% } %>
                    </td>
                    <td class="text-center">
                        <a href="/book/edit/<%= book.id %>" class="btn btn-sm btn-info text-white">Edit</a>
                        <a href="/book/delete/<%= book.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Apakah Anda yakin ingin menghapus buku ini?');">Hapus</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>